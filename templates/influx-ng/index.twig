    <div class="vertical-nav bg-white" id="sidebar">
        <div class="py-4 px-3 mb-4 bg-light">
            <div class="media d-flex align-items-center"><img
                        src="https://res.cloudinary.com/mhmd/image/upload/v1556074849/avatar-1_tcnd60.png" alt="..."
                        width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                <div class="media-body">
                    <h4 class="m-0">{{ user }}</h4>
                    <p class="font-weight-light text-muted mb-0">Web developer</p>
                </div>
            </div>
        </div>

        <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">Main</p>

        <ul class="nav flex-column bg-white mb-0">
            <li class="nav-item">
                <a href="/" class="nav-link text-dark font-italic bg-light">
                    <i class="fa fa-th-large mr-3 text-primary fa-fw"></i>
                    Home
                </a>
            </li>
            <li class="nav-item">
                <a href="/settings" class="nav-link text-dark font-italic">
                    <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>
                    Settings
                </a>
            </li>
            <li class="nav-item">
                <a href="/statistics" class="nav-link text-dark font-italic">
                    <i class="fa fa-cubes mr-3 text-primary fa-fw"></i>
                    Statistics
                </a>
            </li>
            <li class="nav-item">
                <a href="/favorites" class="nav-link text-dark font-italic">
                    <i class="fa fa-cubes mr-3 text-primary fa-fw"></i>
                    Favorites
                </a>
            </li>
        </ul>

        {% for category in categories %}
            <p class="text-gray font-weight-bold text-uppercase px-3 small py-4 mb-0">{{ category.name }}</p>
            <ul class="nav flex-column bg-white mb-0">
                {% for flux in category.flux %}
                    {% if flux.unread > 0 %}
                        <li class="nav-item">
                            <a href="/flux/{{ flux.id }}" class="nav-link text-dark font-italic" title="{{ flux.url }}">
                                <i class="fa fa-area-chart mr-3 text-primary fa-fw"></i>
                                <span class="badge badge-danger d-inline-block">{{ flux.unread }}</span>{{ flux.name }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        {% endfor %}

    </div>

    <div id="content-wrapper">

        <div class="container-fluid">

            {% if settings is defined %}
            {% include "settings.twig" %}
            {{ else }}

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    {% if action == 'item' or action == 'flux' %}

                        <h2 class="articleSection"><a target="_blank" rel="noopener noreferrer"
                                                      href="{{ flux.website }}">{{ flux.name }}</a> :</h2>
                        {{ flux.description }}

                        <a href="/flux/{{ flux.id }}/page/{{ page }}/unread">Non lu</a> |
                        <a href="/flux/{{ flux.id }}/page/{{ page }}/older">Plus vieux</a> en premier
                    {% endif %}

                    {% if action == 'category' %}
                        <h2 class="articleSection">Dossier : {{ category.name }}</h2>
                        <p>Tous les &eacute;v&eacute;nements non lus pour le dossier {{ category.name }}</p>
                    {% endif %}

                    {% if action == 'favorites' %}

                        <h2 class="articleSection">Articles favoris <span id="nbarticle">{{ numberOfItem }}</span>
                        </h2>
                    {% endif %}
                </li>

            </ol>
            {% include "article.twig" %}

            {{% endif %}


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

